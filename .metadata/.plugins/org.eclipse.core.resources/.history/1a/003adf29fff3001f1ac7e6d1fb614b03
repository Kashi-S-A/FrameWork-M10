package com.ty;

import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;

public interface StudentRepository extends JpaRepository<Student, Long> {

	// custom query
	// nativeQuery = true when we use SQL
	@Query(value = "select s from Student s where s.name=:name")
	public List<Student> getByName(String name);

	@Query("select s from Student s where s.name=?1 and s.std=?2")
	public List<Student> getByNameStd(String name, String std);
	
	//custom methods : to design custom methods we need follow naming conventions for method
	
	public List<Student> findByName(String name);
	
}
